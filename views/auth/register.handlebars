<div class="auth-container">
    <h2>Registrar</h2>
    <form action="/register" method="post">
        <div class="form-control">
            <label for="name">Nome:</label>
            <input type="text" name="name" placeholder="Digite seu nome:" required>
        </div>
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" placeholder="Digite seu email:" required>
        </div>
        <div class="form-control">
            <label for="password">Senha:</label>
            <input type="password" name="password" placeholder="Digite seu senha:" required>
        </div>
        <div class="form-control">
            <label for="comfirmpassword">Confirmação de senha:</label>
            <input type="password" name="comfirmpassword" placeholder="Digite seu senha:" required>
        </div>
        <input type="submit" value="Cadastrar">
        <p>Já tem conta?<a href="/login">Clique aqui!</a></p>
    </form>
</div>
